<Page x:Class="specify_client.StartButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:specify_client"
        mc:Ignorable="d"
        Title="Specify" 
        d:DesignHeight="400" d:DesignWidth="800"
        Background="#232731">

    <!-- Define the Grids -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="Buttons" 
               Grid.RowSpan="10"
               Grid.ColumnSpan="10"
               NavigationUIVisibility="Hidden"/>

        <StackPanel Grid.Row="2" Grid.RowSpan="3" 
                    Grid.Column="0" Grid.ColumnSpan="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment = "Center" 
                        VerticalAlignment = "Center">
                <TextBlock TextWrapping="Wrap" 
                           Text="This tool gathers information about your computer. " 
                           FontFamily="Consolas" Foreground="White"
                           HorizontalAlignment = "Center" 
                           VerticalAlignment = "Center"/>
            </StackPanel>

            <TextBlock TextWrapping="Wrap" 
                           Text="It does not collect any private information other than your username, which you can redact." 
                           FontFamily="Consolas" Foreground="White"
                           HorizontalAlignment = "Center" 
                           VerticalAlignment = "Bottom"/>
            
            
        </StackPanel>

        <!-- Start Button -->

        <StackPanel Grid.Row="3" Grid.RowSpan="1"
                    Grid.Column="0" Grid.ColumnSpan="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

            <Button x:Name = "StartButton" 
                              Content = "Start App"
                              FontSize="16"
                              FontWeight="Medium"
                              Click="StartAction"
                              Background="#3b4252"
                              Foreground="White">

                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="TextElement.FontFamily"
                            Value="Fonts/AldoTheApache.ttf #Aldo The Apache"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3b4252"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

        </StackPanel>

        <!-- Toggle Buttons -->

        <StackPanel Grid.Row="4" Grid.RowSpan="1"
                    Grid.Column="1">

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0" Grid.ColumnSpan="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch">
                        
                <ToggleButton x:Name = "Username" 
                              FontSize="12"
                              FontWeight="Medium"
                              Checked = "UsernameOn" 
                              Unchecked = "UsernameOff">

                    <TextBlock Text="Remove Username"
                               TextWrapping="Wrap"
                               TextAlignment="Center" Padding="20,0,20,0"/>

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold SemiCondensed"/>

                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                     Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="4" Grid.RowSpan="1"
                    Grid.Column="2">

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                <ToggleButton x:Name = "UploadToggle" 
                    Content = "Don't Upload"
                    Checked = "UploadOn" 
                    Unchecked = "UploadOff"
                    FontSize="14"
                    FontWeight="Medium">

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold SemiCondensed"/>
                            
                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                    Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>
        
        <StackPanel Grid.Row="4" Grid.RowSpan="1"
                    Grid.Column="3">

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                <ToggleButton x:Name = "OneDriveToggle" 
                    Checked = "OneDriveOn" 
                    Unchecked = "OneDriveOff"
                    FontSize="12"
                    FontWeight="Medium">

                    <TextBlock Text="Redact Commercial OneDrive"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold Condensed"/>
                            
                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                    Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>


    </Grid>

</Page>
    