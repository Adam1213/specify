<Page x:Class="specify_client.ProgramFailed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:specify_client"
      mc:Ignorable="d"
      Title="ProgramFailed"
      Width="800" Height="400"
      MinWidth="800" MinHeight="400"
      d:Height="400" d:Width="800">

    <Page.Resources>
        <FontFamily x:Key="AldoFont" >/Frontend/Fonts/AldotheApache.ttf#Aldo The Apache</FontFamily>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="75*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="2" Grid.RowSpan="1"
                    Grid.Column="1" Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch">

            <TextBlock TextWrapping="Wrap"
                           Text="Something's wrong..."
                           FontFamily="{DynamicResource AldoFont}" Foreground="White"
                           HorizontalAlignment = "Center"
                           VerticalAlignment = "Center" FontSize="48" />
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.RowSpan="1"
                    Grid.Column="0" Grid.ColumnSpan="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch">

            <TextBlock TextWrapping="Wrap"
                           Text="Specify encountered a critical error. We will continue to gather what we can, but data may be incomplete or broken. The error log specify-debug.log has been created in the same folder as the program."
                           FontFamily="Consolas" Foreground="White" 
                           TextAlignment="Center"/>

            <TextBlock TextWrapping="Wrap"
                           Text="Please make an issue in our GitHub in the corner, or send over the file to us. Thanks!"
                           FontFamily="Consolas" Foreground="White"
                           HorizontalAlignment = "Center" />

            <TextBlock />

            <Button x:Name = "Close"
                              Content = "Close Program"
                              FontSize="12"
                              FontWeight="Medium"
                              Click="CloseProgram"
                              Background="#40abce"
                              Foreground="White">

                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="TextElement.FontFamily"
                            Value="{DynamicResource AldoFont}" />
                        <Setter Property="Cursor"
                                Value="Hand" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3b4252" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="100"
                                Height="35"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>